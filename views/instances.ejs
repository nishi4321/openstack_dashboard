  <script>
    var request = window.superagent;

    var flavorList;

    onLoad();

    function onLogout() {
      Cookies.remove("jwttoken");
      location.href = "/";
    }

    function onLoad() {
      getFlavorList().then(function () {
        getInstanceList();
      });
    }

    function getFlavorList() {
      return new Promise(function (resolve, reject) {
        request.get("http://localhost:3000/api/getflavors?token=" + Cookies.get("jwttoken")).end(function (err, res) {
          if (res.body.success) {
            // OK
            flavorList = JSON.parse(res.body.body).flavors;
            resolve();
          } else {
            // Bad
            reject();
          }
        });
      })
    }

    function getInstanceList() {
      request.get("http://localhost:3000/api/getinstances?token=" + Cookies.get("jwttoken")).end(function (err, res) {
        if (res.body.success) {
          // OK
          var instanceList = JSON.parse(res.body.body).servers;
          for (var instance of instanceList) {
            var flavorId = instance.flavor.id;
            var cpu;
            var memory;
            for (var f of flavorList) {
              if (f.id == flavorId) {
                cpu = f.vcpus;
                memory = f.ram;
              }
            }
            generateList(instance.name, instance.addresses, cpu, memory, instance.security_groups, instance.status)
          }
        } else {
          // Bad
        }
      });
    }

    function generateList(name, ipaddreses, cpu, memory, securitygroup, status) {
      var dom = "<tr>";
      dom += "<td>" + name + "</td>";
      try {
        var ipaddressesList = ipaddreses.public1;
        var ipText = [];
        for (var i of ipaddressesList) {
          ipText.push(i.addr);
        }
        dom += "<td>" + ipText.toString().replace(",", ", ") + "</td>";
      } catch {
        dom += "<td></td>";
      }
      dom += "<td>" + cpu + "Core</td>";
      dom += "<td>" + memory + "MB</td>";
      var sgText = [];
      for(var j of securitygroup) {
        sgText.push(j.name);
      }
      dom += "<td>" + sgText.toString().replace(",", ", ") + "</td>";
      dom += "<td>" + status + "</td>";
      dom += '<td><div class="btn-group"><button class="btn btn-outline-dark btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Actions</button><div class="dropdown-menu"></div></div></td>';
      $('#instance-list').append(dom);
    }

  </script>

