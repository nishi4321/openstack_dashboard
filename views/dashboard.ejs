                <div class="progress">
                  <div class="progress-bar progress-bar-striped progress-bar-animated" id="memory-progress"
                    role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 0%">
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

      </main>
